{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Ninja Build Debug",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Debug"
         },
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Ninja Build Release",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Release"
         }
      },
      {
         "label": "Run All Debug Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllDebugTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "group": {
            "kind": "test",
            "isDefault": true
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "Run All Release Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllReleaseTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "clang++ build active file",
         "type": "shell",
         "command": "/usr/bin/clang++",
         "args": [
            "-std=c++17",
            "-g",
            "${file}",
            "-I/usr/local/include/ZenUnit",
            "-I/usr/local/include/MetalMock",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "/bin"
         },
         "problemMatcher": [
            "$gcc"
         ]
      }
   ]
}

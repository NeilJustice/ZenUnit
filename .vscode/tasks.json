{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Ninja Build Debug",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Debug"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Ninja Build Release",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Release"
         },
         "problemMatcher": [
            "$gcc"
         ]
      },
      {
         "label": "Run ZenUnitUtilsAndAssertionTests",
         "type": "shell",
         "command": "./Debug/ZenUnitUtilsAndAssertionTests/ZenUnitUtilsAndAssertionTests",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "group": {
            "kind": "test"
         }
      },
      {
         "label": "Run All Debug Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllDebugTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "group": {
            "kind": "test",
            "isDefault": true
         }
      },
      {
         "label": "Run All Release Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllReleaseTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "clang++ build active file",
         "type": "shell",
         "command": "/usr/bin/clang++",
         "args": [
            "-std=c++2a",
            "-g",
            "${file}",
            "-I${workspaceRoot}",
            "-I${workspaceRoot}/MetalMockExamples",
            "-I${workspaceRoot}/MetalMockTests",
            "-I${workspaceRoot}/ZenUnitCompileSpeedTests",
            "-I${workspaceRoot}/ZenUnitExamples",
            "-I${workspaceRoot}/ZenUnitLibraryTests",
            "-I${workspaceRoot}/ZenUnitTestUtils",
            "-I${workspaceRoot}/ZenUnitUtilsAndAssertionTests",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "problemMatcher": [
            "$gcc"
         ]
      },
      {
         "label": "C/C++: clang build active file",
         "type": "cppbuild",
         "command": "/usr/bin/clang",
         "args": [
            "-std=c++2a",
            "-g",
            "${file}",
            "-I${workspaceRoot}",
            "-I${workspaceRoot}/MetalMockExamples",
            "-I${workspaceRoot}/MetalMockTests",
            "-I${workspaceRoot}/ZenUnitCompileSpeedTests",
            "-I${workspaceRoot}/ZenUnitExamples",
            "-I${workspaceRoot}/ZenUnitLibraryTests",
            "-I${workspaceRoot}/ZenUnitTestUtils",
            "-I${workspaceRoot}/ZenUnitUtilsAndAssertionTests",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": "build",
         "detail": "compiler: /usr/bin/clang"
      },
      {
         "label": "Run Current Python File",
         "type": "shell",
         "command": "PYTHONPATH=. python ${file}",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "group": {
            "kind": "test",
            "isDefault": true
         }
      },
      {
         "label": "Run All Python Tests",
         "type": "shell",
         "command": "PYTHONPATH=ZenUnitDevOpsPython python ZenUnitDevOpsPythonTests/RunAll.py",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Pylint Current File",
         "type": "shell",
         "command": "pylint --rcfile=.pylintrc --score=n --init-hook=\"sys.path.append('.')\" ${file}",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "Pylint All Python Files",
         "type": "shell",
         "command": "ag -g \"\\.py$\" -0 | xargs -0 pylint --rcfile=.pylintrc --score=n --init-hook=\"sys.path.append('.')\"",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "problemMatcher": []
      },
      {
         "label": "flake8 All Python Files",
         "type": "shell",
         "command": "flake8 --config=.flake8 --show-source --benchmark",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "problemMatcher": []
      }
   ]
}

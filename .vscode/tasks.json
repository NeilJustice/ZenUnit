{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Ninja Build Debug",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Debug"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         }
      },
      {
         "label": "Ninja Build Release",
         "type": "shell",
         "command": "ninja",
         "args": [
            "-v"
         ],
         "options": {
            "cwd": "${workspaceRoot}/Release"
         },
         "problemMatcher": [
            "$gcc"
         ]
      },
      {
         "label": "Run All Debug Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllDebugTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         },
         "group": {
            "kind": "test",
            "isDefault": true
         }
      },
      {
         "label": "Run All Release Tests",
         "type": "shell",
         "command": "./TestScripts/RunAllReleaseTests.sh",
         "options": {
            "cwd": "${workspaceRoot}"
         },
         "presentation": {
            "panel": "dedicated",
            "showReuseMessage": false,
            "clear": true
         }
      },
      {
         "label": "clang++ build active file",
         "type": "shell",
         "command": "/usr/bin/clang++",
         "args": [
            "-std=c++2a",
            "-g",
            "${file}",
            "-I${workspaceRoot}",
            "-I${workspaceRoot}/MetalMockExamples",
            "-I${workspaceRoot}/MetalMockTests",
            "-I${workspaceRoot}/ZenUnitCompileSpeedTests",
            "-I${workspaceRoot}/ZenUnitExamples",
            "-I${workspaceRoot}/ZenUnitLibraryTests",
            "-I${workspaceRoot}/ZenUnitTestUtils",
            "-I${workspaceRoot}/ZenUnitUtilsAndAssertionTests",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "problemMatcher": [
            "$gcc"
         ]
      },
      {
         "label": "C/C++: clang build active file",
         "type": "cppbuild",
         "command": "/usr/bin/clang",
         "args": [
            "-std=c++2a",
            "-g",
            "${file}",
            "-I${workspaceRoot}",
            "-I${workspaceRoot}/MetalMockExamples",
            "-I${workspaceRoot}/MetalMockTests",
            "-I${workspaceRoot}/ZenUnitCompileSpeedTests",
            "-I${workspaceRoot}/ZenUnitExamples",
            "-I${workspaceRoot}/ZenUnitLibraryTests",
            "-I${workspaceRoot}/ZenUnitTestUtils",
            "-I${workspaceRoot}/ZenUnitUtilsAndAssertionTests",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": "build",
         "detail": "compiler: /usr/bin/clang"
      }
   ]
}
